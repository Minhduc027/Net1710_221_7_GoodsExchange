@page
@model GoodsExchange.RazorWebApp.Pages.OfferPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Offer.OfferId" />
            <div class="form-group">
                <label asp-for="Offer.CustomerId" class="control-label"></label>
                <select asp-for="Offer.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Offer.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.IsApproved" class="control-label"></label>
                <select asp-for="Offer.IsApproved" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="Offer.IsApproved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
