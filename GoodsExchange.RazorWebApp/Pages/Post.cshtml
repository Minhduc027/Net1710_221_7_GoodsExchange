@page
@model GoodsExchange.RazorWebApp.Pages.PostModel
@{
    ViewData["Title"] = "Post";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<h1>Posts</h1>
<tbody>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Address</th>
                    <th>Category</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>@post.PostId</td>
                    <td>@post.Title</td>
                    <td>@post.Description</td>
                    <td>@post.Address</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#categoryModal">@post.CategoryId</a>
                    </td>
                    <td>@post.CreateDate</td>
                    <td>
                        <a href="/Post/Edit/@post.PostId">Edit</a>
                        <a href="/Post/Delete/@post.PostId">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="categoryModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="categoryModalLabel">Categories</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.CategoryId</td>
                                <td>@category.CategoryName</td>
                                <td>
                                    <a href="/Post/Edit/@category.CategoryId">Edit</a>
                                    <a href="/Post/Delete/@category.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</tbody>
