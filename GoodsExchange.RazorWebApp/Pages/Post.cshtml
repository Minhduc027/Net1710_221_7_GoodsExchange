@page
@model GoodsExchange.RazorWebApp.Pages.PostModel
@{
    ViewData["Title"] = "Post";
    var posts = Model.Posts;
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<h1>Posts</h1>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newPostModal">
   Add
</button>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Address</th>
                    <th>Category</th>
                    <th>Created Date</th>
                    <th>Exchange Date</th>
                    <th>Comment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @if(posts.Count > 0){
            @foreach (var post in posts)
            {
                <tr>
                    <td>@post.PostId</td>
                    <td>@post.Title</td>
                    <td>@post.Description</td>
                    <td>@post.Address</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#categoryModal">@post.CategoryId</a>
                    </td>
                    <td>@post.CreateDate</td>
                    <td>@post.ExchangeDate</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#commentModal">Comments</a>
                    </td>
                    <td>
                        <a href="/Post/Edit/@post.PostId">Edit</a>
                        <a href="#" onclick="deletePost(@post.PostId)">Delete</a>
                    </td>
                </tr>
            }
           } 
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="categoryModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="categoryModalLabel">Categories</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.CategoryId</td>
                                <td>@category.CategoryName</td>
                                <td>
                                    <a href="/Post/Edit/@category.CategoryId">Edit</a>
                                    <a href="/Post/Delete/@category.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Comment Modal -->
    <div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="commentModalLabel">Comments</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul>
                        @foreach (var post in Model.Posts)
                        {
                            @foreach (var comment in post.Comments)
                            {
                                <li>@comment.Title: @comment.Content</li>
                            }
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
<div class="modal fade" id="newPostModal" tabindex="-1" role="dialog" aria-labelledby="newPostModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
            <div class="modal-header">
                <h5 class="modal-title" id="newPostModalLabel">Add new</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <!-- <form id="newPostForm" method="post">
                        -->
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" name="address" required>
                    </div>
                    <div class="form-group">
                        <label for="postOwnerId">PostOwner</label>
                        <input type="number" class="form-control" id="postOwnerId" name="postOwnerId" required>
                    </div>
                    <div class="form-group">
                        <label for="categoryId">CategoryId</label>
                        <input type="number" class="form-control" id="categoryId" name="categoryId" required>
                    </div>
                    <div class="form-group" id="createDateGroup" style="display: none;">
                        <label for="CreateDate">CreateDate</label>
                        <input type="date" class="form-control" id="CreateDate" name="CreateDate">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" onclick="SubmitEvent">Save</button>
                    </div>
                    <!--</form> -->
            </div>
            }

        </div>
    </div>
</div>
@section scripts 
{
    <script>
        function deletePost(postId) {
            if (confirm("Are you sure you want to delete this post?")) {
                $.ajax({
                    type: "POST",
                    url: "/Post?handler=DeleteAsync",
                    data: { postId: postId },
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        alert("There was an error deleting the post.");
                    }
                });
            }
        }
    </script>
}
</>
