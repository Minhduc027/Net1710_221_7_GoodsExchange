@page
@model GoodsExchange.RazorWebApp.Pages.CommentPage.CommentListModel

@{
    ViewData["Title"] = "CommentList";
}

<h3>History of comment</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Post)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Title)
            </td>
            <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.CommentId">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
