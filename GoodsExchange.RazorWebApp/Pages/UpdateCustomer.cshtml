@page "{customerId:int}"
@model GoodsExchange.RazorWebApp.Pages.UpdateCustomerModel
@{
}
<div class="container">
    <h3>Edit Customer</h3>
    <hr />
    <br />
    <form method="post">
        <input asp-for="Customer.CustomerId" type="hidden" />
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Customer.Name"></label>
                <input asp-for="Customer.Name" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Customer.Address"></label>
                <input asp-for="Customer.Address" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Customer.Dob"></label>
                <input asp-for="Customer.Dob" type="date" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Customer.Phone"></label>
                <input asp-for="Customer.Phone" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Customer.Gender"></label>
                <select asp-for="Customer.Gender" class="form-control">
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                </select>
            </div>            
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Customer.Email"></label>
                <input asp-for="Customer.Email" class="form-control" />
            </div>
        </div>

        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-default" href="/Customer">Cancel</a>
    </form>
</div>